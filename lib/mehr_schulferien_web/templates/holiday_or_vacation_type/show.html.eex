  <li>
    <strong>Default is valid for students:</strong>
    <%= @holiday_or_vacation_type.default_is_valid_for_students %>
  </li>

  <li>
    <strong>Wikipedia url:</strong>
    <%= @holiday_or_vacation_type.wikipedia_url %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.holiday_or_vacation_type_path(@conn, :edit, @holiday_or_vacation_type) %></span>
<span><%= link "Back", to: Routes.holiday_or_vacation_type_path(@conn, :index) %></span>
